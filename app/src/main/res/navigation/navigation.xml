<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.tab.bottomnavigationwithnavigationcomponents.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_page2Fragment"
            app:destination="@id/page2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/page2Fragment"
        android:name="com.tab.bottomnavigationwithnavigationcomponents.Page2Fragment"
        android:label="fragment_page2"
        tools:layout="@layout/fragment_page2" >
        <action
            android:id="@+id/action_page2Fragment_to_page3Fragment"
            app:destination="@id/page3Fragment" />
    </fragment>
    <fragment
        android:id="@+id/page3Fragment"
        android:name="com.tab.bottomnavigationwithnavigationcomponents.Page3Fragment"
        android:label="fragment_page3"
        tools:layout="@layout/fragment_page3" />
</navigation>